<UserControl x:Class="BisnesManager.Client.View.ProgramUserControl.TasksBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BisnesManager.Client.View.ProgramUserControl" 
             xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop"
             mc:Ignorable="d" 
             x:Name="me"
             MinHeight="460" MinWidth="800">
    
        <ScrollViewer VerticalScrollBarVisibility="Visible" >

        <StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="         В разработке                 "/>
                <Label Content="                   В работе                    "/>
                <Label Content="       Завершены  "/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                <ListView ItemsSource="{Binding PlaneList}"
                dd:DragDrop.IsDragSource="True"
                dd:DragDrop.IsDropTarget="True"
                AllowDrop="True"
                MouseUp="MouseUPMethod">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0" Background="Snow">
                                <StackPanel Orientation="Horizontal" Margin="0"  >
                                    <Label Content="Автор: " Margin="0" Padding="0"/>
                                    <Label Content="{Binding Author}" Margin="0" Padding="0"/>
                                </StackPanel>
                                <StackPanel Margin="0" Orientation="Horizontal" >
                                    <Label Content="Задача: " Foreground="RosyBrown" Margin="0" Padding="0"/>
                                    <TextBlock Text="{Binding Content}" Margin="0" Padding="0" MaxWidth="180" TextWrapping="Wrap"/>
                                </StackPanel>
                                <StackPanel Margin="0" Orientation="Horizontal">
                                    <Label Content="Доп.: " Foreground="RosyBrown" Margin="0" Padding="0"/>
                                    <TextBlock Text="{Binding AssignmentsContent}" Margin="0" Padding="0" MaxWidth="180" TextWrapping="Wrap"/>
                                </StackPanel>
                                <StackPanel Margin="0" Orientation="Horizontal">
                                    <Label Content="{Binding StartDate, StringFormat=dd.MM.YYYY}" Margin="0" Padding="0"/>
                                    <Label Content=" - " Margin="0" Padding="0"/>
                                    <Label Content="{Binding EndDate, StringFormat=dd.MM.YYYY}" Margin="0" Padding="0"/>
                                </StackPanel>
                                <Button Content="в Архив"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!---->
                <ListView ItemsSource="{Binding WorkList}"
                dd:DragDrop.IsDragSource="True"
                dd:DragDrop.IsDropTarget="True" 
                AllowDrop="True"
                MouseUp="MouseUPMethod">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel   Margin="0" Background="Azure" >
                                <StackPanel Orientation="Horizontal"  Margin="0" >
                                    <Label Content="Автор: " Margin="0" Padding="0"/>
                                    <Label Content="{Binding Author}" Margin="0" Padding="0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"  Margin="0" >
                                    <Label Content="Задача: " Foreground="RosyBrown" Margin="0" Padding="0"/>
                                    <TextBlock Text="{Binding Content}" Margin="0" Padding="0" MaxWidth="180" TextWrapping="Wrap"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"  Margin="0" >
                                    <Label Content="Доп.: " Foreground="RosyBrown" Margin="0" Padding="0"/>
                                    <TextBlock Text="{Binding AssignmentsContent}" Margin="0" Padding="0" MaxWidth="180" TextWrapping="Wrap"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"  Margin="0" >
                                    <Label Content="{Binding StartDate, StringFormat=dd.MM.YYYY}" Margin="0" Padding="0"/>
                                    <Label Content=" - " Margin="0" Padding="0"/>
                                    <Label Content="{Binding EndDate, StringFormat=dd.MM.YYYY}" Margin="0" Padding="0"/>
                                </StackPanel>
                                <Button Content="в Архив"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!---->
                <ListView ItemsSource="{Binding EndList}"
                dd:DragDrop.IsDragSource="True"
                dd:DragDrop.IsDropTarget="True" 
                AllowDrop="True"
                MouseUp="MouseUPMethod">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel   Margin="0" >
                                <StackPanel Orientation="Horizontal"  Margin="0" >
                                    <Label Content="Автор: " Margin="0" Padding="0"/>
                                    <Label Content="{Binding Author}" Margin="0" Padding="0"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"  Margin="0" >
                                    <Label Content="Задача: " Foreground="RosyBrown" Margin="0" Padding="0"/>
                                    <TextBlock Text="{Binding Content}" Margin="0" Padding="0" MaxWidth="180" TextWrapping="Wrap"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"  Margin="0" >
                                    <Label Content="Доп.: " Foreground="RosyBrown" Margin="0" Padding="0"/>
                                    <TextBlock Text="{Binding AssignmentsContent}" Margin="0" Padding="0" MaxWidth="180" TextWrapping="Wrap"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal"  Margin="0" >
                                    <Label Content="{Binding StartDate, StringFormat=DD.mm.YYYY}" Margin="0" Padding="0"/>
                                    <Label Content=" - " Margin="0" Padding="0"/>
                                    <Label Content="{Binding EndDate, StringFormat=DD.mm.YYYY}" Margin="0" Padding="0"/>
                                </StackPanel>
                                <Button Content="в Архив"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>

</UserControl>
