<UserControl x:Class="Система_учета_сотрудников._Дипломный_проект.View.PageParts.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Система_учета_сотрудников._Дипломный_проект.View.PageParts"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Label Content="Системные настройки" />
            <StackPanel Orientation="Horizontal">
                <Label Content="Шрифт: "/>
                <ComboBox ItemsSource="{Binding Shrift}"/>
                
            
            </StackPanel>
            <Label Content="Настройки приложений" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
