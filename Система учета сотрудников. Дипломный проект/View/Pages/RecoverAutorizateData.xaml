<Page x:Class="Система_учета_сотрудников._Дипломный_проект.View.RecoverAutorizateData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Система_учета_сотрудников._Дипломный_проект.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RecoverAutorizateData">

    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <Label Content="Вам на почту был высылан ваш пароль и логин!" Margin="0"/>
            <Label Content="Сожалеем, если вы потеряли доступ к почтовому ящику." Margin="0"/>
            <Label Content="Заполните поля ниже. Вам будет выслан новый логин и пароль" Margin="0"/>
                <StackPanel HorizontalAlignment="Center">
                    <Label Content="Проверочная фраза:"/>
                    <TextBox Text="{Binding User.Word}"/>
                    <Label Content="Новый email:"/>
                    <TextBox Text="{Binding User.Email}"/>
                <StackPanel Orientation="Horizontal">
                    <Button Content="Да, запросить"/>
                    <Button Content="Назад"/>
                </StackPanel>
            </StackPanel>               
        </StackPanel>
    </Grid>
</Page>
