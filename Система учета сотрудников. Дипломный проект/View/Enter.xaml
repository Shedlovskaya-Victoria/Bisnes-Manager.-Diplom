<Page x:Class="Система_учета_сотрудников._Дипломный_проект.View.Enter"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Система_учета_сотрудников._Дипломный_проект.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Enter">

    <StackPanel HorizontalAlignment="Center" >
        <Label Content="Добро пожаловать!" FontSize="16"/>
        <Label Content="Введите логин"/>
        <TextBox Text="{Binding User.Login, ElementName=login}"/>
        <Label Content="Введите пароль"/>
        <PasswordBox x:Name="password"/>
        <StackPanel>
           <StackPanel Orientation="Horizontal" Margin="0">
               <Button Content="Войти" Command="{Binding Autentification}" CommandParameter="{Binding login}"/>
                <Button Content="Регистрация" Command="{Binding Autorization}"/>
           </StackPanel>
           <Button Content="Восстановить доступ" Command="{Binding  Recover}"/>
        </StackPanel>
    </StackPanel>
</Page>
